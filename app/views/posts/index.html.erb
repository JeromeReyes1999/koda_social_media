<%= link_to 'New', new_post_path, class: 'btn btn-primary w-25' %>
<%= button_to "Logout", destroy_user_session_path, :method => :delete %>
<div class="card mt-4">
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <th>Image</th>
      <td>location</th>
      <td>text</th>
      <th>Action</th>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td style="width: 200px"><%= image_tag post.image.url, alt: 'avatar', class:'w-100',style:"object-fit: cover" if post.image?%></td>
          <td><%= post.location %></th>
          <td><%= post.text %></th>
          <td>
            <%= link_to 'comments', post_comments_path(post), class: 'btn btn-warning' %>
            <%= link_to 'edit', edit_post_path(post), class: 'btn btn-warning' %>
            <%= link_to "delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      <% unless @posts.present?%>
        <tr>
          <td colspan="4" class="text-muted">
            No posts to show
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
