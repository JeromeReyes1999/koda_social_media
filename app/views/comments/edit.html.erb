<!--Page-->
<div class="container">
  <div class="card">
    <div class="card-header">
      <%= link_to "❮ Back", post_comments_path, class: 'btn btn-sm btn-outline-primary d-inline-block '%>
      <h5 class="d-inline-block align-middle mx-2 my-1">Edit Comment</h5>
    </div>
    <div class="card-body">
      <%= form_for @comment, url: post_comment_path(@post), method: :patch do |f| %>
        <%= render partial: 'form', locals: {f: f, comment: @comment} %>
        <%= f.submit "Update", class: 'border btn btn-primary form-control mt-3' %>
      <% end %>
    </div>
  </div>
</div>
