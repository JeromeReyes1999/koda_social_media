<%= link_to 'New', new_post_comment_path, class: 'btn btn-primary w-25' %>
<%= button_to "Logout", destroy_user_session_path, :method => :delete %>
<div class="card mt-4">
  <br class="card-body ">
    <%= @post.location %><br>
    <%= @post.text %>
  </div>
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <td>content</th>
      <th>Action</th>
      </thead>
      <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.content %></th>
          <td>
            <%= link_to 'edit', edit_post_comment_path(@post, comment), class: 'btn btn-warning' %>
            <%= link_to "delete", post_comment_path(@post, comment), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      <% unless @comments.present?%>
        <tr>
          <td colspan="4" class="text-muted">
            No comments to show
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
